{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES5",
    "module": "ESNext",
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
